<p id="notice"><%= notice %></p>
<%= form_tag do %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
    
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th>color</th>
     <th>product_variant</th>
    

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr >
       
        <td><%= product.Title %></td>
        <td><%= product.description %></td>
        <td class="price"><%= product.price %></td>
        <td class="image"><%= link_to (product.image_url)%></td>
        <td><%= product.color %></td>

        <td>
        <% if product.price.to_i < 100 %>
          very small
        <% elsif product.price.to_i > 100 && product.price.to_i < 500 %>
          small
        <% elsif product.price.to_i > 500 && product.price.to_i < 1000 %>
          medium     
        <% elsif product.price.to_i > 1000 && product.price.to_i < 1500 %>
          large
        <% else %>
          large 
        <% end %>
        </td>


        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path %>

<% end %>
