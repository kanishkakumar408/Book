<p id="notice"><%= notice %></p>
<%= form_tag do %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
    
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th>color</th>
     <th>product_variant</th>
    

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr >
       
        <td><%= product.Title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td class="image"><%= link_to (product.image_url)%></td>
        <td><%= product.color %></td>
        <td class="product_variant"></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path %>

<% end %>